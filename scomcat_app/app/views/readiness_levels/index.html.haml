%h4.page-title Readiness Levels

- if policy(ReadinessLevel).create?
  = link_to 'New Readiness Level', new_readiness_level_path, :class => "btn btn-info btn-xs"
= render "_shared/download_machine_readable_data_buttons"

%table{:class=>"table table-condensed table-striped sorted-table"}
  %thead
    %tr
      %th Name
      %th Description
      %th Technologies with this readiness level
      - if (policy(ReadinessLevel).edit?)|(policy(ReadinessLevel).destroy?)
        %th.actions Actions

  %tbody
    - @readiness_levels.each do |readiness_level|
      %tr
        %td.no-wrap= link_to readiness_level.name, readiness_level
        %td.expand-to-fit-available-space= readiness_level.description
        %td.number= readiness_level.technologies.count
        - if (policy(ReadinessLevel).edit?)|(policy(ReadinessLevel).destroy?)
          %td.actions
            - if policy(ReadinessLevel).edit?
              = link_to 'Edit', edit_readiness_level_path(readiness_level), :title => 'Edit', :class => "btn btn-info btn-xs"
            - if policy(ReadinessLevel).destroy?
              = link_to 'Delete', readiness_level, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete', :class => "btn btn-info btn-xs"

- if policy(ReadinessLevel).create?
  = link_to 'New Readiness Level', new_readiness_level_path, :class => "btn btn-info btn-xs"
= render "_shared/download_machine_readable_data_buttons"