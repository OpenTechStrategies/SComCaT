%h4.page-title Collections

%div.row
  %div.col-lg-6
    - if policy(Collection).create?
      = link_to 'New Collection', new_collection_path, :class => "btn btn-info btn-xs"
  %div.col.right-aligned
    = render "_shared/download_machine_readable_data_buttons"


%table{:class=>"table table-condensed table-striped sorted-table"}
  %thead
    %tr
      %th Name
      %th.unsorted-column Description
      %th Technologies in this collection
      - if (policy(Collection).edit?)|(policy(Collection).destroy?)
        %th.actions Actions

  %tbody
    - @collections.each do |collection|
      %tr
        %td.no-wrap= link_to collection.name,collection
        %td.expand-to-fit-available-space= collection.description
        %td.number= collection.technologies.count
        - if (policy(Collection).edit?)|(policy(Collection).destroy?)
          %td.actions
            - if policy(Collection).edit?
              = link_to 'Edit', edit_collection_path(collection), :title => 'Edit', :class => "btn btn-info btn-xs"
            - if policy(Collection).destroy?
              = link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete', :class => "btn btn-info btn-xs"


%div.row
  %div.col-lg-6
    - if policy(Collection).create?
      = link_to 'New Collection', new_collection_path, :class => "btn btn-info btn-xs"
  %div.col.right-aligned
    = render "_shared/download_machine_readable_data_buttons"