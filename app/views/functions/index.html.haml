%h4.page-title Functions

%div.row
  %div.col-lg-6
    - if policy(Function).create?
      = link_to 'New Function', new_function_path, :class => "btn btn-info btn-xs"
  %div.col.right-aligned
    = render "_shared/download_machine_readable_data_buttons"

%table{:class=>"table table-condensed table-striped sorted-table"}
  %thead
    %tr
      %th Name
      %th.unsorted-column Description
      %th Technologies providing this function
      - if (policy(Function).edit?)|(policy(Function).destroy?)
        %th.actions Actions

  %tbody
    - @functions.each do |function|
      %tr
        %td.no-wrap= link_to function.name, function
        %td.expand-to-fit-available-space= function.description
        %td.number= function.technologies.count
        - if (policy(Function).edit?)|(policy(Function).destroy?)
          %td.actions
            - if policy(Function).edit?
              = link_to 'Edit', edit_function_path(function), :title => 'Edit', :class => "btn btn-info btn-xs"
            - if policy(Function).destroy?
              = link_to 'Delete', function, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete', :class => "btn btn-info btn-xs"

%div.row
  %div.col-lg-6
    - if policy(Function).create?
      = link_to 'New Function', new_function_path, :class => "btn btn-info btn-xs"
  %div.col.right-aligned
    = render "_shared/download_machine_readable_data_buttons"