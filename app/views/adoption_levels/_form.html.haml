= form_for @adoption_level do |f|
  - if @adoption_level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@adoption_level.errors.count, "error")} prohibited this adoption_level from being saved:"
      %ul
        - @adoption_level.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
